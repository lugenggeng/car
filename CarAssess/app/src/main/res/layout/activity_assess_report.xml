<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wanglibao.usedcar.carassess.ui.activity.assess.AssessReportActivity">

    <include
        android:id="@+id/rl_assess_report_title"
        layout="@layout/common_title"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_assess_report_imageList"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/rl_assess_report_title"></android.support.v4.view.ViewPager>

    <ScrollView
        android:layout_below="@+id/viewpager_assess_report_imageList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_assess_report_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </GridLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
