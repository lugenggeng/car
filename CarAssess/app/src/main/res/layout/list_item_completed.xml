<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image_list_item_completed_carImage"
        android:layout_width="120dp"
        android:layout_height="90dp"
        tools:src="@mipmap/ic_launcher"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/tv_list_item_completed_carTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="大众宝来2008年1.6L豪华型"
        android:singleLine="true"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/image_list_item_completed_carImage"/>

    <TextView
        android:id="@+id/tv_list_item_completed_assessId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="单号:BEIJING20160801ZY"
        android:singleLine="true"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/image_list_item_completed_carImage"
        android:layout_below="@+id/tv_list_item_completed_carTitle"/>

    <Button
        android:id="@+id/btn_list_item_completed_checkReport"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/image_list_item_completed_carImage"
        android:layout_below="@+id/tv_list_item_completed_assessId"
        tools:text="查看评估报告"/>

</RelativeLayout>
